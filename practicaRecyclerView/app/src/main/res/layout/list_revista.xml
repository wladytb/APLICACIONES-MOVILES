<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/carViewPersonalizado"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:background="@drawable/estilo_cardview"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        android:orientation="horizontal"
        android:padding="2dp">
        <ImageView
            android:id="@+id/imgRevista"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:srcCompat="@drawable/books"
            android:layout_alignParentLeft="true"/>
        <LinearLayout
            android:id="@+id/linerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/imgRevista"
            android:orientation="vertical"
            android:layout_toRightOf="@id/imgRevista"
            android:layout_marginLeft="5dp"
            >
            <TextView
                android:id="@+id/txtNameRevista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="nombre de la revista"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/txtVol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="volumen:4"
                android:textColor="@android:color/white"
                android:textSize="12dp"
                />
            <TextView
                android:id="@+id/txtNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NÃºmero: 2 (2020)"
                android:textColor="@android:color/white"
                android:textSize="12dp"
                />
            <TextView
                android:id="@+id/txtpublicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="publicado: 2021-02-19"
                android:textColor="@android:color/white"
                android:textSize="12dp"
                />
            <TextView
                android:id="@+id/txtdoi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="doi: dfdfgdffsd"
                android:textColor="@android:color/white"
                android:textSize="12dp"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>